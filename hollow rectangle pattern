#include <iostream>
using namespace std;
// for hollow rectangle pattern
int main() {
    int rows, columns;
    cin>>rows>>columns;
    for(int i=1; i<=rows; i++){
        for(int j=1; j<=columns; j++){
            if(i==1 || i==rows){  //for making only at first and last rows
                cout<<"*";
            }
            else if (j==1 || j==columns){ //for making stars at first and last columns
            cout<<"*";
        }
        else
        cout<<" ";
       }
       cout<<endl; //to break the line and go to the next line
    }   
	return 0;
}
