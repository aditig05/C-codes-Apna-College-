#include <iostream>
using namespace std;
//Butterfly pattern
int main() {
    int n;
    cin>>n; 
        for(int i=1 ; i<=n; i++){
            for(int j=1 ; j<=i; j++){
                    cout<<"*";  //after calculating the number of stars and spaces in each
                    row, we first add the stars, then spaces and then again stars.
            }
            int space=2*n-2*i;
            for(int j=1; j<=space; j++){
                cout<<" ";
            }
            for(int j=1 ; j<=i; j++){
                cout<<"*";
            }
            cout<<endl; //to break the line and go to the next line
    }   
    for(int i=n ; i>=1; i--){ // for the reverse of same pattern, we use loop from i=n to 1 in reverse order.
            for(int j=1 ; j<=i; j++){
                    cout<<"*";
            }
            int space=2*n-2*i;
            for(int j=1; j<=space; j++){
                cout<<" ";
            }
            for(int j=1 ; j<=i; j++){
                cout<<"*";
            }
            cout<<endl; //to break the line and go to the next line
    }   
    
    
	return 0;
}
